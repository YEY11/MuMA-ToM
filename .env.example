# ============================================================================
# LIMP_Poker_V3 Configuration
# ============================================================================

# ========== API 配置 ==========
API_KEY=sk-********************
API_BASE_URL=YOUR_API_URL_HERE

# ========== 模型配置 ==========
# VLM (视觉模型) - 用于图像分析，推荐 qwen3-vl-plus (性价比最高)
VLM_MODEL_NAME=qwen3-vl-plus

# LLM (语言模型) - 用于推理和GT提取，推荐 gpt-4o-mini (速度快+便宜)
LLM_MODEL_NAME=gpt-4o-mini

# ASR (语音模型) - 用于音频转写
ASR_MODEL_NAME=whisper-large-v3
ASR_API_KEY=sk-********************
ASR_BASE_URL=YOUR_ASR_URL_HERE

# ========== 协议模式 ==========
# audience: 观众视角，双方手牌可见
# player: 玩家视角，对手手牌隐藏
PROTOCOL_MODE=audience

# ========== 采样设置 ==========
FPS=1
SAMPLING_INTERVAL=1

# ========== QA 生成级别 ==========
QA_LEVELS=action,phase

# ========== Agent 开关 (用于消融实验) ==========
AGENT_BOARD=True
AGENT_ACTION=True
AGENT_POSTURE=True
AGENT_EQUITY=False
AGENT_TOM_BELIEF=True
AGENT_TOM_SOCIAL=True

# ========== 特征开关 ==========
USE_DECISION_TIME=True
USE_POSTURE_SEQUENCE=True
USE_FACIAL_EMOTION=True
